<table class="table">
  <thead>
    <tr>
      <th><strong>Title</strong></th>
      <th><strong>Description</strong></th>
      <th><strong>Author</strong></th>
      <th><strong>Status</strong></th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.desc %></td>
      <td><%= @book.author.full_name %></td>
      <% if @book.borrowed? %>
        <td><span class="label label-danger">Checked out</span></td>
        <% if @book.borrowed_by?(current_user) %>
         <td><%= link_to 'Return me!', return_book_path(@book) %></td>
        <%end%>
      <%else%>
        <td><span class="label label-success">Available</span></td>
        <td><span class="label label-success"><%= link_to 'Borrow me!', borrow_book_path(@book) %></span></td>
      <%end%>
    </table>
    <%= link_to 'Edit', edit_book_path(@book), :class => "btn btn-danger", :style => "color: #aaa" %> |
    <%= link_to 'Back', books_path, :class => "btn btn-warning", :style => "color: #aaa" %>
    <%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger", :style => "color: #aaa" %></td>
